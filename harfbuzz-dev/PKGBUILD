# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=harfbuzz-dev
pkgver=2.7.2
pkgrel=1
pkgdesc='OpenType text shaping engine'
arch=('x86_64')
url="https://github.com/harfbuzz/harfbuzz/"
makedepends=('freetype2-dev')
license=('GPL')
source=("https://github.com/harfbuzz/harfbuzz/archive/$pkgver.tar.gz")
md5sums=('SKIP')

build() {
  cd $srcdir/harfbuzz-$pkgver
  ./autogen.sh
  ./configure prefix=/opt --disable-shared
}

package() {
  cd $srcdir/harfbuzz-$pkgver/src
  make DESTDIR=$pkgdir install-libLTLIBRARIES
  make DESTDIR=$pkgdir install-pkgincludeHEADERS
  make DESTDIR=$pkgdir install-pkgconfigDATA
}
